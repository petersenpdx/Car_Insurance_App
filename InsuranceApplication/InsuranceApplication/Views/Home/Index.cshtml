@using InsuranceApplication.ViewModels
@model DisplayQuoteVm
<div class="jumbotron">
    <h1>Welcome to Mark Petersen's Insuracne </h1>
    </div>
<div class="row no-gutters m-3">
    <div class="card col-sm-12 col-md-10 col-lg-6 mx-auto shadow">
        <div class="card-header">
            <h3 class="m-0">Complete this form to receive your quote:</h3>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("Quote", "Home", FormMethod.Post))
            {
                <form class="needs-validation" novalidate>
                    <div class="form-row no-gutters">
                        <div class="form-group col-md-12">
                            <label for="firstName">First Name</label>
                            <input name="FirstName" type="text" class="form-control" placeholder="Enter first name" required>
                        </div>
                        <div class="form-group col-md-12">
                            <label for="lastName">Last Name</label>
                            <input name="LastName" type="text" class="form-control" placeholder="Enter last name" required />
                        </div>
                        <div class="form-group col-md-12">
                            <label for="emailAddress">Email Address</label>
                            <input name="EmailAddress" type="email" class="form-control" placeholder="Enter email" required />
                            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                        </div>
                        <div class="form-group col-md-12">
                            <label for="dateOfBirth">Date of Birth</label>
                            <input name="DateOfBirth" type="date" class="form-control" placeholder="Date of Birth" required />
                        </div>
                        <div class="form-group col-md-12">
                            <label for="carYear">Car Year</label>
                            <input name="CarYear" type="text" class="form-control" maxlength="4" placeholder="####" required />
                        </div>
                        <div class="form-group col-md-12">
                            <label for="carMake">Car Make</label>
                            <input name="CarMake" type="text" class="form-control" placeholder="Enter make" required />
                        </div>
                        <div class="form-group col-md-12">
                            <label for="carModel">Car Model</label>
                            <input name="CarModel" type="text" class="form-control" placeholder="Enter model" required />
                        </div>
                        <div class="form-group col-md-12">
                            <label for="dui">Have you ever had a DUI?</label>
                            <select name="DUI" class="form-control" required>
                                <option>No</option>
                                <option>Yes</option>
                            </select>
                        </div>
                        <div class="form-group col-md-12">
                            <label for="speedingTicketNum">How many speeding tickets do you have?</label>
                            <input name="SpeedingTickets" tytsp="number" class="form-control" min="0" step="1" placeholder="0" required />
                        </div>
                        <div class="form-group col-md-12">
                            <label for="typeOfCoverage">Would you like full coverage or liability?</label>
                            <select name="CoverageType" class="form-control" required>
                                <option>Full Coverage</option>
                                <option>Liability</option>
                            </select>
                        </div>
                        <button type="submit" class="btn btn-md btn-primary center-block" data-toggle="modal" data-target="quoteModal">Submit</button>
                    </div>
                </form>
            }
        </div>
    </div>
</div>
